<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="70dp"
                  android:background="@drawable/blue_gradient_background"
                  android:baselineAligned="false"
                  android:id="@+id/linearLayout"
                  android:layout_marginBottom="20dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@android:color/white"
                  android:textStyle="bold"
                  android:layout_marginLeft="40dp"
                  android:textSize="17dp"
                  android:text="@string/componi_offerta"
                  android:layout_marginTop="25dp"
                  android:textIsSelectable="false"
                  android:id="@+id/canoneTitle"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/linearLayout1"
                  android:paddingBottom="20dp">
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:background="@drawable/blue_gradient_background"
                      android:layout_marginTop="5dp"
                      android:id="@+id/firstOffertaLayout">
            <LinearLayout android:orientation="vertical"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="0.4">
                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:textColor="@color/white"
                          android:ellipsize="end"
                          android:minLines="2"
                          android:maxLines="4"
                          android:gravity="center_vertical|left"
                          android:text="@string/comune_o"
                          android:editable="false"
                          android:focusableInTouchMode="false"
                          android:focusable="true"
                          android:clickable="true"
                          android:longClickable="false"
                          android:layout_marginLeft="40dp"
                          android:textStyle="italic"
                          android:id="@+id/offerta1_servises"
                          android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="0.6"
                          android:layout_gravity="right"
                          android:gravity="right">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/euro_t"
                          android:textColor="@android:color/white"
                          android:textSize="21dp"
                          android:textStyle="bold"
                          android:textIsSelectable="false"
                          android:id="@+id/textView1"
                          android:layout_marginLeft="45dp"/>
                <TextView android:layout_width="100dp"
                          android:layout_height="fill_parent"
                          android:text="@string/sixty"
                          android:shadowColor="@android:color/darker_gray"
                          android:background="@color/transparent"
                          android:singleLine="false"
                          android:gravity="center|left"
                          android:textStyle="bold"
                          android:textColor="@android:color/background_light"
                          android:id="@+id/offerta1Cost"
                          android:textSize="22dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:background="@drawable/blue_gradient_background"
                      android:layout_marginTop="5dp"
                      android:id="@+id/secondOffertaLayout"
                      android:measureWithLargestChild="false">
            <LinearLayout android:orientation="vertical"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="0.4">
                <TextView android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:textColor="@color/white"
                          android:ellipsize="end"
                          android:minLines="2"
                          android:maxLines="4"
                          android:gravity="center_vertical|left"
                          android:text="@string/comune"
                          android:editable="false"
                          android:focusableInTouchMode="false"
                          android:focusable="true"
                          android:clickable="true"
                          android:longClickable="false"
                          android:layout_marginLeft="40dp"
                          android:textStyle="italic"
                          android:id="@+id/offerta2_servises"
                          android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="0.6"
                          android:layout_gravity="right"
                          android:gravity="right">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/euro_t"
                          android:textColor="@android:color/white"
                          android:textSize="21dp"
                          android:textStyle="bold"
                          android:textIsSelectable="false"
                          android:id="@+id/textView3"
                          android:layout_marginLeft="45dp"/>
                <TextView android:layout_width="100dp"
                          android:layout_height="fill_parent"
                          android:text="@string/sixty"
                          android:shadowColor="@android:color/darker_gray"
                          android:background="@color/transparent"
                          android:singleLine="false"
                          android:gravity="center|left"
                          android:textStyle="bold"
                          android:textColor="@android:color/background_light"
                          android:textSize="22dp"
                          android:id="@+id/offerta2Cost"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
                      android:background="@drawable/blue_gradient_background" android:layout_marginTop="5dp" android:id="@+id/thirdOffertaLayout">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:layout_weight="0.4">
                <TextView android:layout_width="fill_parent" android:layout_height="fill_parent"
                          android:textColor="@color/white" android:id="@+id/offerta3_servises" android:ellipsize="end"
                          android:minLines="2" android:maxLines="4" android:gravity="center_vertical|left"
                          android:text="@string/comune"
                          android:editable="false" android:focusableInTouchMode="false" android:focusable="true"
                          android:clickable="true" android:longClickable="false" android:layout_marginLeft="40dp"
                          android:textStyle="italic" android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:layout_weight="0.6"
                          android:layout_gravity="right" android:gravity="right">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/euro_t"
                          android:textColor="@android:color/white" android:textSize="21dp" android:textStyle="bold"
                          android:textIsSelectable="false" android:id="@+id/textView4" android:layout_marginLeft="45dp"/>
                <TextView android:layout_width="100dp" android:layout_height="fill_parent"
                          android:text="@string/sixty"
                          android:shadowColor="@android:color/darker_gray"
                          android:background="@color/transparent"
                          android:singleLine="false"
                          android:gravity="center|left"
                          android:textStyle="bold"
                          android:textColor="@android:color/background_light"
                          android:textSize="22dp"
                          android:id="@+id/offerta3Cost"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
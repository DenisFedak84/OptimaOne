<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/linearLayout">

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/testNum"
        android:background="@drawable/blue_dettaglio_table_cell"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:textStyle="bold"
        android:text="ID Gas"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tagliaMeseGas"
        android:contentDescription="@string/energy_cell"
        android:background="@drawable/blue_dettaglio_table_cell"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="Taglia mese Gas"
        android:visibility="gone" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Prezzo Gas"
        android:id="@+id/prezzoGas"
        android:contentDescription="@string/gas_cell"
        android:background="@drawable/blue_dettaglio_table_cell"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Prezzo Gas con IVA"
        android:background="@drawable/blue_dettaglio_table_cell"
        android:textColor="@color/white"
        android:contentDescription="@string/adsl_cell"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:id="@+id/prezzoGasConIVA" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sfor."
        android:background="@drawable/blue_dettaglio_table_cell"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:id="@+id/sforamento" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Manc. Cons."
        android:background="@drawable/blue_dettaglio_table_cell"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Codice tariffa"
        android:background="@drawable/blue_dettaglio_table_cell"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="% GAS"
        android:background="@drawable/blue_dettaglio_table_cell"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:id="@+id/device"/>

</LinearLayout>
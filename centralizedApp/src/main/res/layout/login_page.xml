<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_solid_background"
    android:baselineAligned="false"
    android:clickable="true"
    android:id="@+id/linearLayout26">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:background="@android:color/white"
            android:id="@+id/linearLayout12"
            android:visibility="visible" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_large"
                android:background="@android:color/background_light"
                android:cropToPadding="false"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:visibility="visible"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/nome_utente"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="#4d4d4d"
                        android:gravity="center_vertical|left"
                        android:minWidth="100dp" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:gravity="bottom"
                        android:id="@+id/nome" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:visibility="visible"
                    android:id="@+id/linearLayout13"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:textColor="#4d4d4d"
                        android:gravity="center_vertical|left"
                        android:minWidth="100dp"
                        android:id="@+id/textView3" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:gravity="bottom"
                        android:id="@+id/password"
                        android:password="true" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:baselineAligned="false"
            android:background="#e6e6e6"
            android:id="@+id/linearLayout11">

            <TextView
                android:text="@string/loginError"
                android:textColor="#cf031e"
                android:layout_width="wrap_content"
                android:id="@+id/loginError"
                android:layout_span="2"
                android:visibility="invisible"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/loginErrorConnection"
                android:textColor="#cf031e"
                android:layout_width="wrap_content"
                android:id="@+id/loginErrorConnection"
                android:layout_span="2"
                android:visibility="invisible"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout22"
            android:visibility="visible" >

            <Button
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="@string/accedi"
                android:textColor="#cf031e"
                android:textStyle="bold"
                android:shadowColor="@android:color/darker_gray"
                android:background="@drawable/red_optima_button_selector"
                android:textSize="26dp"
                android:clickable="true"
                android:id="@+id/accedi"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout"
            android:visibility="visible" >

            <Button
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:text="@string/test"
                android:textColor="#cf031e"
                android:textStyle="bold"
                android:shadowColor="@android:color/darker_gray"
                android:background="@drawable/red_optima_button_selector"
                android:textSize="26dp"
                android:clickable="true"
                android:id="@+id/test"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

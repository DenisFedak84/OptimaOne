<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_solid_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_gradient_background"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:text="Esporta e invia"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cartaceo"
                android:checked="false"
                android:textColor="@color/white"
                android:button="@drawable/check_box_selector"
                android:layout_marginTop="7dp"
                android:text="@string/cartaceo"
                android:singleLine="false"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:minHeight="50dp"
                android:minWidth="400dp"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:focusableInTouchMode="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/llEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--<include-->
                    <!--layout="@layout/email_edittext_layout"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plusButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_weight="7"
                    android:gravity="center_vertical|right"
                    android:minWidth="50dp"
                    android:orientation="vertical"
                    android:paddingBottom="7dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/plus_enabled"
                        android:clickable="false"
                        android:focusable="false"
                        android:id="@+id/plusButtonImageView" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="1dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:background="@drawable/full_holo_light"
                    android:text="OK"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/holo_red_dark"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="1dip"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:background="@drawable/full_holo_light"
                    android:text="Cancel"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/holo_red_dark"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
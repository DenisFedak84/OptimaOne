<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@color/item_background_lite" android:id="@+id/currentADSL"
              android:gravity="center_vertical|center_horizontal">

    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/adsl_1"
              android:id="@+id/serviceDesc" android:textSize="13dp" android:layout_weight="5"
              android:gravity="center|center_vertical|center_horizontal" android:textColor="#4d4d4d"
              android:background="@drawable/full_holo_light"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numerazioneSpinner" android:layout_gravity="center_vertical" android:layout_marginTop="3dp"
            android:spinnerMode="dialog" android:visibility="gone" android:gravity="left|top"
            style="@style/mySpinnerStyle"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/serviceCheckBox" android:layout_gravity="center" android:checked="false"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/f_kwh"
              android:id="@+id/serviceId" android:textSize="13dp" android:layout_weight="5"
              android:gravity="center_vertical|center_horizontal" android:textColor="#4d4d4d"
              android:background="@drawable/full_holo_light" android:visibility="gone"/>
</LinearLayout>
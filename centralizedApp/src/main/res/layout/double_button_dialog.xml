<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fe2542"
        android:orientation="vertical"
        android:id="@+id/linearLayout44"
        android:layout_centerVertical="true"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#1194cc"
            android:orientation="vertical"
            android:id="@+id/linearLayout36"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="@string/sfd_confirmation_title"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@drawable/optima_account_logo"
                android:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4d4d4d"
                android:textStyle="bold"
                android:padding="10dp"
                android:id="@+id/message" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <Button
                android:id="@+id/yes"
                android:layout_width="175dp"
                android:layout_height="55dp"
                android:layout_weight="0.5"
                android:background="@drawable/full_holo_light"
                android:text="@string/sfd_btn_yes"
                android:textColor="@color/holo_red_dark"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_below="@+id/linearLayout44"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/no"
                android:layout_width="175dp"
                android:layout_height="55dp"
                android:layout_weight="0.5"
                android:background="@drawable/full_holo_light"
                android:text="@string/sfd_btn_no"
                android:textColor="@color/holo_red_dark"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_below="@+id/linearLayout44"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
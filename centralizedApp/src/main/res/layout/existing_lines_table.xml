<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wlrCurrentRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4.9"
        android:id="@+id/lineeNameContainer">

    </LinearLayout>

    <TextView
        android:id="@+id/rete"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="5.0"
        android:background="@drawable/full_holo_light"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#4d4d4d"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/lineType"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="5.0"
        android:background="@drawable/full_holo_light"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#4d4d4d"
        android:textSize="11dp"
        android:layout_marginLeft="-3dp" />

    <TextView
        android:id="@+id/numLines"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="5.02"
        android:background="@drawable/full_holo_light"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#4d4d4d"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/numerazioneAggiuntive"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="4.87"
        android:background="@drawable/full_holo_light"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#4d4d4d"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/services"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="4.06"
        android:background="@drawable/full_holo_light"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#4d4d4d"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/localBundle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="5"
        android:background="@drawable/full_holo_light"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#4d4d4d"
        android:textSize="11dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/mobileBundle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="4.9"
        android:background="@drawable/full_holo_light"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="120dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#4d4d4d"
        android:textSize="11dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="5.15"
        android:background="#e6e6e6"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/deleteLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="22"
                android:background="@drawable/eliminia_button" />

            <TextView
                android:id="@+id/lineIdField"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="5.2"
                android:background="@drawable/full_holo_light"
                android:gravity="center_vertical|center_horizontal"
                android:minWidth="120dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#4d4d4d"
                android:textSize="11dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>